Object subclass: #PiComputer	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'MyPiComputer'!!PiComputer methodsFor: 'as yet unclassified' stamp: 'PritamSangani 10/9/2018 13:21'!computePiForIterations: numIterations	"compute Pi with the Gregory-Leibniz Series"	| x |	x := Float new + 1.		1 to: numIterations  do: [ :i | 			(i even) ifTrue: [ 				x := x + (1/((2*i) + 1))		 ] ifFalse: [ 				x := x - (1/((2*i) + 1))		 ]				].	x := 4*x.	^ x.	 			! !